<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Script file="Localization.lua"/>
	<Script file="Localization_de.lua"/>
	<!--<Script file="Localization_<languageCode>.lua"/>-->
	<Script file="FarmHud.lua"/>

	<FontString name="FarmHudFont" inherits="SystemFont_Shadow_Med1" outline="THICK" hidden="true" virtual="true">
		<Shadow>
			<Offset x=".2" y="-.2"/>
			<Color r="0" g="0" b="0"/>
		</Shadow>
	</FontString>

	<Frame name="FarmHud" parent="UIParent" frameStrata="BACKGROUND" alpha="1" hidden="true">
		<Size x="140" y="140"/>
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" />
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture parentKey="gatherCircle" file="spells\StrangleThorn_DiamondMine_Circle_Solid_White" alphaMode="ADD" hidden="true">
					<Size x="60" y="60"/>
					<Anchors>
						<Anchor point="CENTER" />
					</Anchors>
				</Texture>
				<FontString parentKey="mouseWarn" inherits="FarmHudFont" text="MOUSE ON" hidden="true" />
				<FontString parentKey="coords" inherits="FarmHudFont" hidden="true" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="N" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="NE" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="E" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="SE" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="S" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="SW" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="W" />
				<FontString parentArray="cardinalPoints" inherits="FarmHudFont" text="NW" />
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="onScreenButtons" hidden="true">
				<Size x="1" y="1" />
				<Frames>
					<Button parentKey="mouseButton">
						<Size x="20" y="20"/>
						<Anchors>
							<Anchor point="CENTER" x="-34"/>
						</Anchors>
						<NormalTexture file="Interface\AddOns\FarmHud\media\Mouse-Normal"/>
						<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
						<PushedTexture file="Interface\AddOns\FarmHud\media\Mouse-Pushed"/>
						<Scripts>
							<OnClick function="FarmHud_ToggleMouse"/>
						</Scripts>
					</Button>
					<Button parentKey="backgroundButton">
						<Size x="20" y="20"/>
						<Anchors>
							<Anchor point="CENTER" x="-12"/>
						</Anchors>
						<Scripts>
							<OnClick function="FarmHud_ToggleBackground"/>
						</Scripts>
						<NormalTexture file="Interface\WorldMap\WorldMap-Icon" />
						<PushedTexture file="Interface\WorldMap\WorldMap-Icon" desaturated="true" />
						<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
					</Button>
					<Button parentKey="optionsButton">
						<Size x="20" y="20"/>
						<Anchors>
							<Anchor point="CENTER" x="12"/>
						</Anchors>
						<Scripts>
							<OnClick>
								local Lib = LibStub("AceConfigDialog-3.0");
								if Lib.OpenFrames["FarmHud"]~=nil then
									Lib:Close("FarmHud");
								else
									Lib:Open("FarmHud");
								end
							</OnClick>
						</Scripts>
						<NormalTexture file="Interface\AddOns\FarmHud\media\options" />
						<PushedTexture file="Interface\AddOns\FarmHud\media\options" desaturated="true" />
						<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
					</Button>
					<Button parentKey="closeButton">
						<Size x="20" y="20"/>
						<Anchors>
							<Anchor point="CENTER" x="34"/>
						</Anchors>
						<NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
						<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
						<PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
						<Scripts>
							<OnClick function="FarmHudCloseButton_OnClick"/>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
			<Frame name="FarmHudCluster" setallpoints="true" />
			<Minimap name="FarmHudMinimap" enableMouse="false" setallpoints="true" alpha="0" />
		</Frames>
		<Scripts>
			<OnLoad function="FarmHud_OnLoad" />
			<OnEvent function="FarmHud_OnEvent" />
			<OnShow function="FarmHud_OnShow" />
			<OnHide function="FarmHud_OnHide"/>
		</Scripts>
	</Frame>

</Ui>